{
    "version": "1.0.0",
    "name": "insitaction/request-managers-bundle",
    "description": "Request validation and persist.",
    "type": "symfony-bundle",
    "require": {
        "php": ">=7.4",
        "symfony/framework-bundle": "^4.4",
        "doctrine/orm": "^2.7",
        "symfony/serializer": "4.4.16",
        "doctrine/doctrine-bundle": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Insitaction\\RequestManagerBundle\\": "src/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Blairy",
            "email": "jblairy@insitaction.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "symfony/dependency-injection": "^4.4",
        "symfony/config": "^4.4",
        "symfony/http-kernel": "^4.4",
        "symfony/yaml": "^4.4"
    },
    "scripts": {
        "phpcsfixer": "./vendor/bin/php-cs-fixer fix",
        "phpcsfixer-lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpstan": "./vendor/bin/phpstan analyse --no-progress",
        "ci": [
            "@phpcsfixer-lint",
            "@phpstan"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "composer/package-versions-deprecated": true
        }
    }
}
